@model Task

<h1>Create a New Task</h1>

<form method="post">
    <input type="hidden" asp-for="TaskId">
    <br/>
    <label asp-for="TaskName">Task Name:</label>
    <input asp-for="TaskName"/>
    <br/>
    <label asp-for="DueDate">Due Date:</label>
    <input asp-for="DueDate"/>
    <br/>
    <label asp-for="Quadrant">Quadrant:</label>
    <select asp-for="Quadrant">
        <option value="1">Quadrant I: Important / Urgent</option>
        <option value="2">Quadrant II: Important / Not Urgent</option>
        <option value="3">Quadrant III: Not Important / Urgent</option>
        <option value="4">Quadrant IV: Not Important / Not Urgent</option>
    </select>
    <br/>
    <label asp-for="Category">Category:</label>
    <select asp-for="Category">
        <option value="Home">Home</option>
        <option value="School">School</option>
        <option value="Work">Work</option>
        <option value="Church">Church</option>
    </select>
    <label asp-for="Completed">Completed:</label>
    <select asp-for="Completed">
        <option value="True">True</option>
        <option value="False">False</option>
    </select>

    <button type="submit">Save Task</button>
</form>