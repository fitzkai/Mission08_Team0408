@model ToDo

<h1 class="text-center mt-4">Create a New Task</h1>

<div class="container mt-4">
    <form method="post" class="p-4 border rounded shadow-sm bg-light">
        <input type="hidden" asp-for="TaskId">
        <div class="mb-3">
            <label asp-for="TaskName" class="form-label">Task Name:</label>
            <input asp-for="TaskName" class="form-control"/>
        </div>
        <div class="mb-3">
            <label asp-for="DueDate" class="form-label">Due Date:</label>
            <input asp-for="DueDate" type="date" class="form-control"/>
        </div>

        <div class="mb-3">
            <label asp-for="Quadrant" class="form-label">Quadrant:</label>
            <select asp-for="Quadrant" class="form-select">
                <option value="1">Quadrant I: Important / Urgent</option>
                <option value="2">Quadrant II: Important / Not Urgent</option>
                <option value="3">Quadrant III: Not Important / Urgent</option>
                <option value="4">Quadrant IV: Not Important / Not Urgent</option>
            </select>
        </div>

        <div class="mb-3">
            <label asp-for="Category" class="form-label">Category:</label>
            <select asp-for="Category" class="form-select">
                <option value="Home">Home</option>
                <option value="School">School</option>
                <option value="Work">Work</option>
                <option value="Church">Church</option>
            </select>
        </div>

        <div class="mb-3">
            <label asp-for="Completed" class="form-label">Completed:</label>
            <select asp-for="Completed" class="form-select">
                <option value="True">True</option>
                <option value="False">False</option>
            </select>
        </div>

        <button type="submit" class="btn btn-secondary w-100">Save Task</button>
    </form>
</div>
