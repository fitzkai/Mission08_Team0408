<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Quadrant View</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <style>
        .quadrant {
            border: 1px solid #ddd;
            padding: 20px;
            height: 300px; /* Adjust height as needed */
            overflow-y: auto;
        }
    </style>
</head>
<body>

    <div class="container mt-4">
        <div class="row">
            <!-- Top Left Quadrant -->
            <div class="col-md-6 quadrant bg-light">
                <h4>Quadrant 1</h4>
                @* <ul> *@
                @*     @foreach (var record in Model.Take(5)) // First 5 records *@
                @*     { *@
                @*         <li>@record.Name</li> *@
                @*     } *@
                @* </ul> *@
            </div>

            <!-- Top Right Quadrant -->
            <div class="col-md-6 quadrant bg-secondary text-white">
                <h4>Quadrant 2</h4>
                @* <ul> *@
                @*     @foreach (var record in Model.Skip(5).Take(5)) // Next 5 records *@
                @*     { *@
                @*         <li>@record.Name</li> *@
                @*     } *@
                @* </ul> *@
            </div>
        </div>

        <div class="row mt-2">
            <!-- Bottom Left Quadrant -->
            <div class="col-md-6 quadrant bg-info text-white">
                <h4>Quadrant 3</h4>
                @* <ul> *@
                @*     @foreach (var record in Model.Skip(10).Take(5)) // Next 5 records *@
                @*     { *@
                @*         <li>@record.Name</li> *@
                @*     } *@
                @* </ul> *@
            </div>

            <!-- Bottom Right Quadrant -->
            <div class="col-md-6 quadrant bg-warning">
                <h4>Quadrant 4</h4>
                @* <ul> *@
                @*     @foreach (var record in Model.Skip(15).Take(5)) // Next 5 records *@
                @*     { *@
                @*         <li>@record.Name</li> *@
                @*     } *@
                @* </ul> *@
            </div>
        </div>
    </div>

</body>
</html>
