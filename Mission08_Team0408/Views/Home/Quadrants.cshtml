<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Quadrant View</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <style>
        .quadrant {
            border: 1px solid #ddd;
            padding: 20px;
            height: 300px; /* Adjust height as needed */
            overflow-y: auto;
        }

        .label-row {
            text-align: center;
            font-weight: bold;
            padding-bottom: 10px;
        }

        .side-label {
            display: flex;
            align-items: center;
            justify-content: center;
            font-weight: bold;
            writing-mode: vertical-rl;
            text-orientation: mixed;
            height: 100%;
        }

        .task-item {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 5px;
        }

        .task-buttons {
            display: flex;
            gap: 5px;
        }
    </style>
</head>
<body>

    <div class="container mt-4">
        <div class="row label-row">
            <div class="col-md-6"><h2>Urgent</h2></div>
            <div class="col-md-6"><h2>Not Urgent</h2></div>
        </div>

        <div class="row">
            <div class="col-md-1 side-label"><h2>Important</h2></div>

            <div class="col-md-5 quadrant bg-light">
                <h4>Quadrant 1</h4>
                <button class="btn btn-primary btn-sm mb-2">Add</button>
                <ul class="list-group">
                    @foreach (var record in Model)
                    {
                        if (record.Quadrant == 1)
                        {
                            <li class="list-group-item d-flex justify-content-between align-items-center">
                                @record.Name
                                <div class="task-buttons">
                                    <button class="btn btn-warning btn-sm">Edit</button>
                                    <button class="btn btn-danger btn-sm">Delete</button>
                                </div>
                            </li>
                        }
                    }
                </ul>
            </div>

            <div class="col-md-5 quadrant bg-secondary text-white">
                <h4>Quadrant 2</h4>
                <button class="btn btn-primary btn-sm mb-2">Add</button>
                <ul class="list-group">
                    @foreach (var record in Model)
                    {
                        if (record.Quadrant == 2)
                        {
                            <li class="list-group-item d-flex justify-content-between align-items-center">
                                @record.Name
                                <div class="task-buttons">
                                    <button class="btn btn-warning btn-sm">Edit</button>
                                    <button class="btn btn-danger btn-sm">Delete</button>
                                </div>
                            </li>
                        }
                    }
                </ul>
            </div>

            <div class="col-md-1"></div>
        </div>

        <div class="row mt-2">
            <div class="col-md-1 side-label"><h2>Not Important</h2></div>

            <div class="col-md-5 quadrant bg-info text-white">
                <h4>Quadrant 3</h4>
                <button class="btn btn-primary btn-sm mb-2">Add</button>
                <ul class="list-group">
                    @foreach (var record in Model)
                    {
                        if (record.Quadrant == 3)
                        {
                            <li class="list-group-item d-flex justify-content-between align-items-center">
                                @record.Name
                                <div class="task-buttons">
                                    <button class="btn btn-warning btn-sm">Edit</button>
                                    <button class="btn btn-danger btn-sm">Delete</button>
                                </div>
                            </li>
                        }
                    }
                </ul>
            </div>

            <div class="col-md-5 quadrant bg-warning">
                <h4>Quadrant 4</h4>
                <button class="btn btn-primary btn-sm mb-2">Add</button>
                <ul class="list-group">
                    @foreach (var record in Model)
                    {
                        if (record.Quadrant == 4)
                        {
                            <li class="list-group-item d-flex justify-content-between align-items-center">
                                @record.Name
                                <div class="task-buttons">
                                    <button class="btn btn-warning btn-sm">Edit</button>
                                    <button class="btn btn-danger btn-sm">Delete</button>
                                </div>
                            </li>
                        }
                    }
                </ul>
            </div>

            <div class="col-md-1"></div>
        </div>
    </div>

</body>
</html>
