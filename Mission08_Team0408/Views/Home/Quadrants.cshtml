<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Quadrant View</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <style>
        .quadrant {
            border: 1px solid #ddd;
            padding: 20px;
            height: 300px; /* Adjust height as needed */
            overflow-y: auto;
        }

        .label-row {
            text-align: center;
            font-weight: bold;
            padding-bottom: 10px;
        }

        /* Rotates "Important" and "Not Important" */
        .side-label {
            display: flex;
            align-items: center;
            justify-content: center;
            font-weight: bold;
            writing-mode: vertical-rl; /* Rotates text */
            text-orientation: mixed; /* Keeps letters readable */
            height: 100%; /* Fills the row */
        }
    </style>
</head>
<body>

    <div class="container mt-4">
        <!-- Top Labels -->
        <div class="row label-row">
            <div class="col-md-6"><h2>Urgent</h2></div>
            <div class="col-md-6"><h2>Not Urgent</h2></div>
        </div>

        <div class="row">
            <!-- Left Label (Sideways "Important") -->
            <div class="col-md-1 side-label"><h2>Important</h2></div>

            <!-- Top Left Quadrant -->
            <div class="col-md-5 quadrant bg-light">
                <h4>Quadrant 1</h4>
                <ul>
                    @foreach (var record in Model)
                    {
                        if (record.Quadrant == 1)
                        {
                            <li>@record.Name</li>
                        }
                    }
                </ul>
            </div>

            <!-- Top Right Quadrant -->
            <div class="col-md-5 quadrant bg-secondary text-white">
                <h4>Quadrant 2</h4>
                <ul>
                    @foreach (var record in Model)
                    {
                        if (record.Quadrant == 2)
                        {
                            <li>@record.Name</li>
                        }
                    }
                </ul>
            </div>

            <div class="col-md-1"></div> <!-- Empty Space -->
        </div>

        <div class="row mt-2">
            <!-- Left Label (Sideways "Not Important") -->
            <div class="col-md-1 side-label"><h2>Not Important</h2></div>

            <!-- Bottom Left Quadrant -->
            <div class="col-md-5 quadrant bg-info text-white">
                <h4>Quadrant 3</h4>
                <ul>
                    @foreach (var record in Model)
                    {
                        if (record.Quadrant == 3)
                        {
                            <li>@record.Name</li>
                        }
                    }
                </ul>
            </div>

            <!-- Bottom Right Quadrant -->
            <div class="col-md-5 quadrant bg-warning">
                <h4>Quadrant 4</h4>
                <ul>
                    @foreach (var record in Model)
                    {
                        if (record.Quadrant == 4)
                        {
                            <li>@record.Name</li>
                        }
                    }
                </ul>
            </div>

            <div class="col-md-1"></div> <!-- Empty Space -->
        </div>
    </div>

</body>
</html>
